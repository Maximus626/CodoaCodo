package Ejercicio_Clases_13082019_Biblioteca;

import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class Biblioteca {

    private String nombre;
    private int codigol;
    private int estante;

    public Biblioteca() {

    }

    public Biblioteca(String nombre, int codigol, int estante) {
        this.nombre = nombre;
        this.codigol = codigol;
        this.estante = estante;
    }

    public String getNombre() {
        return nombre;
    }

    public void setNombre(String nombre) {
        this.nombre = nombre;
    }

    public int getCodigol() {
        return codigol;
    }

    public void setCodigol(int codigol) {
        this.codigol = codigol;
    }

    public int getEstante() {
        return estante;
    }

    public void setEstante(int estante) {
        this.estante = estante;
    }

    public void cargaLista(List<Biblioteca> biblioteca) {
        Scanner teclado = new Scanner(System.in);
        for (int i = 0; i <= 2; i++) {

            System.out.println("Nombre libro: ");
            String nombres = teclado.next();
            System.out.println("Codigo ISBN: ");
            int codigols = teclado.nextInt();
            System.out.println("Estante: ");
            int estantes = teclado.nextInt();

            Biblioteca biblo = new Biblioteca(nombres, codigols, estantes);
            biblioteca.add(biblo);
            System.out.println("");

        }
    }

    public void mostrarlib(ArrayList<Biblioteca> listalib) {

        for (Biblioteca lista : listalib) {
            System.out.println("Nombre: " + lista.getNombre());
            System.out.println("Codigo ISBN: " + lista.getCodigol());
            System.out.println("Estante: " + lista.getEstante());
            System.out.println("");
        }

    }

    public List<Biblioteca> removerlibro(List<Biblioteca> libro, int codigol) {
        for (int i = 0; i < libro.size(); i++) {
            if (libro.get(i).getCodigol() == codigol) {
                libro.remove(i);
            }
            System.out.println("");
        }
        return libro;

    }

    public List<Biblioteca> buscarlilbro(List<Biblioteca> libro, int codigol) {
        for (int i = 0; i < libro.size(); i++) {

            if (libro.get(i).getCodigol() == codigol) {
                System.out.println("Libro encontrado");
                //System.out.println("");

            }
        }
        return libro;
    }
}
